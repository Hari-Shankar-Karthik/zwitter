<% block('title').append('<title>Comments</title>') %>
<%- layout('boilerplate') %>
<h1>Welcome to the Comments Page!</h1>
<ul>
    <% for(const comment of comments) { %>
        <li>
            <b><%= comment.author.username %></b>: <%= comment.body %>
            <a href="/users/<%= comment.author._id %>/comments/<%= comment._id %>">details</a>
        </li>
    <% } %>
</ul>
<form action="/home">
    <button>Back to Home</button>
</form>