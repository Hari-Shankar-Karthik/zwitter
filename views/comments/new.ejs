<% block('title').append('<title>New Comment</title>') %>
<%- layout('boilerplate') %>
<h1>New Comment: <%= user.username %></h1>
<form action="/users/<%= user._id %>/comments" method="post">
    <label for="username">Author: </label>
    <input type="text" name="username" id="username" readonly value="<%= user.username %>">
    <label for="body">Comment: </label>
    <textarea name="body" id="body" cols="30" rows="5"></textarea>
    <button>Submit</button>
</form>
<a href="/comments">Cancel</a>